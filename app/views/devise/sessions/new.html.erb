<%= render "shared/second-header"%>
<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
   </h1>
  </div>
  <div class ="login-flash-message">
   Invalid Email or password
  </div>
   <div class="form-group">
   <br />
     <div class='form-text-wrap'>
     <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", autofocus: true, autocomplete: "email" , placeholder:"PC・携帯どちらでも可"%>
    </div>

   <div class="form-group">
    <br />
     <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>

    <div class='remember-message'>
     <label> <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </label>
       </div>
  <% end %>

  <div class="actions">
  <div class="login-btn">
    <%= f.submit "ログイン", class:"login-red-btn"%>
  </div>
  </div>
</div>
<% end %>

<%= render 'shared/second-footer' %>

